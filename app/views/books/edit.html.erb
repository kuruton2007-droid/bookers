<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

 <div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
 </div>
 <br>

 <div class="field">
  <%= f.label :body %><br>
  <%= f.text_area :body %>
 </div>

 <div class="actions">
    <%= f.submit "Update Book" %>
  </div>

<%= link_to "Show", book_path %> | 
<%= link_to "Back", books_path %> 
  <% end %>
